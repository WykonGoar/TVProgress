<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.wouter.tvprogress" >

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/tv_progress"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".activity.ShowListActivity"
            android:configChanges="orientation"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.ShowActivity"
            android:configChanges="orientation"
            android:label="@string/title_activity_show"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".activity.EditShowActivity"
            android:configChanges="orientation"
            android:label="Edit show"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".activity.SelectShowResourceActivity"
            android:label="@string/title_activity_select_episodes_resource" >
        </activity>
    </application>

</manifest>
